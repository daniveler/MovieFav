<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieFav" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainYellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@null</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabBarText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
        <item name="tabSelectedTextColor">@color/mainYellow</item>
        <item name="color">@color/white</item>
    </style>
</resources>